@*
 * ========================================
 * MainLayout.razor - Main Application Layout
 * ========================================
 * This is the main layout component that provides the structure for authenticated pages.
 * It includes the sidebar navigation menu and main content area with responsive design.
 * 
 * Structure:
 * - Sidebar: Navigation menu (responsive - hidden on mobile)
 * - Header: Top navigation bar with mobile toggle
 * - Body: Main content area where pages are rendered
 *@

@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing

@inherits LayoutComponentBase

<div class="page">
    <!-- Sidebar Navigation -->
    <aside class="page-sidebar" id="sidebar">
        <div class="sidebar-header">
            <i class="bi bi-mortarboard-fill sidebar-logo"></i>
            <span class="sidebar-brand">Student Planner</span>
        </div>
        <NavMenu />
    </aside>

    <!-- Mobile Sidebar Overlay -->
    <div class="sidebar-overlay d-lg-none" onclick="document.getElementById('sidebar').classList.remove('show')"></div>

    <!-- Main Content Area -->
    <div class="page-wrapper">
        <!-- Header -->
        <header class="page-header">
            <div class="header-inner">
                <!-- Mobile Sidebar Toggle Button -->
                <button class="sidebar-toggle d-lg-none"
                        onclick="document.getElementById('sidebar').classList.toggle('show')">
                    <i class="bi bi-list"></i>
                </button>
                <span class="header-greeting">Student Project Planner</span>
            </div>
        </header>

        <!-- Page Content -->
        <main class="page-body">
            <div class="page-content">
                @Body
            </div>
        </main>
    </div>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">X</a>
</div>