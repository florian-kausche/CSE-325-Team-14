@*
 * ========================================
 * Courses.razor - Course Management Page
 * ========================================
 * This page allows users to manage their courses:
 * - View all enrolled courses
 * - Add new courses
 * - Edit existing courses
 * - Delete courses
 * - View course assignments
 * - Color-code courses for visual organization
 * 
 * Features:
 * - Form validation (Razor EditForm with DataAnnotationsValidator)
 * - Error handling and success notifications
 * - Loading states and responsive layout
 * - Inline editing support
 * - Course color selection
 *@

@page "/courses"
@rendermode @(new Microsoft.AspNetCore.Components.Web.InteractiveServerRenderMode(prerender: false))
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using StudentProjectPlanner.Models
@using StudentProjectPlanner.Services.Interfaces
@inject ICourseService CourseService
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation
@inject IJSRuntime JS
@attribute [Authorize]

<PageTitle>Courses - Student Project Planner</PageTitle>

<div class="container-fluid content">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-6">My Courses</h1>
            <p class="lead text-muted">Manage your courses and assignments.</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12">
            <button class="btn btn-primary" @onclick="ShowCreateForm">
                <i class="bi bi-plus-circle"></i> Add New Course
            </button>
        </div>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    @if (showCreateForm)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>@(editingCourse != null ? "Edit Course" : "Create New Course")</h5>
            </div>
            <div class="card-body">
                <EditForm Model="courseModel" OnValidSubmit="SaveCourse">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="mb-3">
                        <label class="form-label">Course Name</label>
                        <InputText class="form-control" @bind-Value="courseModel.Name"
                                   placeholder="e.g., Introduction to Computer Science" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Course Code</label>
                        <InputText class="form-control" @bind-Value="courseModel.CourseCode" placeholder="e.g., CSE325" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Semester</label>
                        <InputText class="form-control" @bind-Value="courseModel.Semester"
                                   placeholder="e.g., Spring 2026" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description (Optional)</label>
                        <InputTextArea class="form-control" @bind-Value="courseModel.Description" rows="3" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <InputText type="color" class="form-control form-control-color" @bind-Value="courseModel.Color" />
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>@(editingCourse != null ? "Update" : "Create") Course</span>
                            }
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="CancelForm">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading courses...</span>
            </div>
        </div>
    }
    else if (!courses.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon"><i class="bi bi-journal-text"></i></div>
            <h5>No courses yet</h5>
            <p>Add your first course to start tracking assignments and deadlines.</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var course in courses)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card course-card" style="border-left-color: @course.Color;">
                        <div class="card-body">
                            <h5 class="card-title">@course.Name</h5>
                            <div class="mb-2">
                                <span class="badge course-badge"
                                      style="background-color: @course.Color;">@course.CourseCode</span>
                                <small class="text-muted ms-1">@course.Semester</small>
                            </div>
                            @if (!string.IsNullOrEmpty(course.Description))
                            {
                                <p class="text-muted mb-0">@course.Description</p>
                            }
                            <div class="d-flex gap-2 mt-3 course-card-actions">
                                <button class="btn btn-sm btn-outline-primary" @onclick="() => EditCourse(course)">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteCourse(course.Id)">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Course> courses = new();
    private CourseModel courseModel = new();
    private Course? editingCourse;
    private bool showCreateForm = false;
    private bool isLoading = true;
    private bool isSaving = false;
    private string? errorMessage;
    private string currentUserId = string.Empty;

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationState { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (AuthenticationState != null)
        {
            var authState = await AuthenticationState;
            var user = authState.User;

            if (user.Identity?.IsAuthenticated == true)
            {
                var appUser = await UserManager.GetUserAsync(user);
                if (appUser != null)
                {
                    currentUserId = appUser.Id;
                    await LoadCourses();
                }
            }
        }

        isLoading = false;
    }

    private async Task LoadCourses()
    {
        try
        {
            courses = (await CourseService.GetUserCoursesAsync(currentUserId)).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading courses: {ex.Message}";
        }
    }

    private void ShowCreateForm()
    {
        courseModel = new CourseModel { Color = "#007bff" };
        editingCourse = null;
        showCreateForm = true;
        errorMessage = null;
    }

    private void EditCourse(Course course)
    {
        courseModel = new CourseModel
        {
            Name = course.Name,
            CourseCode = course.CourseCode,
            Semester = course.Semester,
            Description = course.Description,
            Color = course.Color
        };
        editingCourse = course;
        showCreateForm = true;
        errorMessage = null;
    }

    private async Task SaveCourse()
    {
        isSaving = true;
        errorMessage = null;

        try
        {
            var course = new Course
            {
                Name = courseModel.Name,
                CourseCode = courseModel.CourseCode,
                Semester = courseModel.Semester,
                Description = courseModel.Description,
                Color = courseModel.Color
            };

            if (editingCourse != null)
            {
                await CourseService.UpdateCourseAsync(editingCourse.Id, course, currentUserId);
            }
            else
            {
                await CourseService.CreateCourseAsync(course, currentUserId);
            }

            await LoadCourses();
            CancelForm();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task DeleteCourse(int courseId)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this course? All associated assignments will also be deleted."))
        {
            try
            {
                await CourseService.DeleteCourseAsync(courseId, currentUserId);
                await LoadCourses();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting course: {ex.Message}";
            }
        }
    }

    private void CancelForm()
    {
        showCreateForm = false;
        editingCourse = null;
        courseModel = new();
    }

    private class CourseModel
    {
        [Required]
        [MaxLength(200)]
        public string Name { get; set; } = string.Empty;

        [Required]
        [MaxLength(50)]
        public string CourseCode { get; set; } = string.Empty;

        [Required]
        [MaxLength(100)]
        public string Semester { get; set; } = string.Empty;

        [MaxLength(500)]
        public string? Description { get; set; }

        [MaxLength(7)]
        public string Color { get; set; } = "#007bff";
    }
}